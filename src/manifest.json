{
  "manifest_version": 2,
  "name": "Episode++",
  "short_name": "Episode++",
  "version": "0.1",

  "default_locale": "en",
  "description": "__MSG_description__",
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },

  "browser_action": {
    "default_icon": {
      "19": "img/icon19.png",
      "38": "img/icon38.png"
    },
    "default_title": "__MSG_defaultTitle__"
  },

  "background": {
    "scripts": [ "jquery.min.js", "utils.js", "series.js", "context_menus.js", "background.js" ],
    "persistent": false
  },

  "homepage_url": "https://github.com/alt-13/Episode",

  "minimum_chrome_version": "40",

  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },

  "permissions": [ "tabs", "storage", "notifications", "contextMenus", "http://*/*", "https://*/*" ]
}
